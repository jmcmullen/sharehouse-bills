{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"strict": true,
		"skipLibCheck": true,
		"composite": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["bun"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"],
	"tsc-alias": {
		"resolveFullPaths": true
	}
}
