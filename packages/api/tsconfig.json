{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"noEmit": false,
		"outDir": "./dist",
		"composite": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"],
	"tsc-alias": {
		"resolveFullPaths": true
	}
}
