{
	"name": "sharehouse-bills",
	"private": true,
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"typecheck": "turbo typecheck",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"db:push": "turbo -F @sharehouse-bills/api db:push",
		"db:studio": "turbo -F @sharehouse-bills/api db:studio",
		"db:generate": "turbo -F @sharehouse-bills/api db:generate",
		"db:migrate": "turbo -F @sharehouse-bills/api db:migrate"
	},
	"dependencies": {},
	"devDependencies": {
		"turbo": "^2.5.4",
		"@biomejs/biome": "1.9.4",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.0"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.2.16"
}
